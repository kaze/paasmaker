<h1>Role List</h1>

<div class="btn-group btn-group-header">
	{{#ifPermission 'ROLE_EDIT'}}
		<a class="btn" href="/role/create"><i class="icon-plus"></i> Create Role</a>
	{{/ifPermission}}
</div>

<table class="table table-striped table-bordered">
	<tr>
		<th>Name</th>
		<th>Permissions</th>
	</tr>
	{{#each roles}}
		<tr>
			<td>
				{{#ifPermission 'ROLE_EDIT'}}<a href="/role/{{ id }}">{{/ifPermission}}
					{{ name }}
				{{#ifPermission 'ROLE_EDIT'}}</a>{{/ifPermission}}
			</td>
			<td>
				<ul>
					{{#each permissions}}
						<li>{{this}}</li>
					{{/each}}
				</ul>
			</td>
		</tr>
	{{/each}}
</table>
