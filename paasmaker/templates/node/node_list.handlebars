}}<h1>Nodes</h1>

<table class="table table-bordered node-list-category">
	<tr>
		<th><i class="icon-calendar"></i> Pacemakers</th>
	</tr>
	{{#each pacemakers}}
		<tr>
			<td>
				{{#if can_delete}}{{#ifPermission 'SYSTEM_ADMINISTRATION'}}
					<a class="btn btn-small btn-danger job-action-button node-delete-button" data-node-name="{{name}}" data-node-id="{{id}}">Delete</a>
				{{/ifPermission}}{{/if}}

				{{#ifPermission 'NODE_DETAIL_VIEW'}}<a href="/node/{{id}}">{{/ifPermission}}
					<span style="font-weight:bold" title="UUID: {{uuid}}">{{name}}</span>
				{{#ifPermission 'NODE_DETAIL_VIEW'}}</a>{{/ifPermission}}
				<span class="badge {{state_class.badge}}" title="State: {{state}}"><i class="{{state_class.icon}} icon-white"></i></span><br>
				{{route}}:{{apiport}}
			</td>
		</tr>
	{{/each}}
</table>

